{
  "name": "qiankun-demo",
  "version": "1.0.0",
  "description": "qiankun微框架demo",
  "main": "index.js",
  "author": "zhangyuanliang",
  "license": "MIT",
  "scripts": {
    "demo:install": "npm-run-all --serial install:*",
    "install:base": "cd base && yarn",
    "install:app1": "cd app1 && yarn",
    "install:app2": "cd app2 && yarn",
    "demo:start": "npm-run-all --parallel start:*",
    "start:base": "cd base && yarn start",
    "start:app1": "cd app1 && yarn start",
    "start:app2": "cd app2 && yarn start",
    "demo:build": "npm-run-all --parallel build:*",
    "build:base": "cd base && yarn build",
    "build:app1": "cd app1 && yarn build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
